 }
else {
	$hash_keys{LOGGEDIN} = 'no';
}

 my $file = "../data/HTML_TEMPLATE/info.html";
  my $template_parser = Template->new;
  open my $fh, '<', $file;
  my $foglio = '';
  $template_parser->process($fh,\%hash_keys,\$foglio);
  print $foglio;

