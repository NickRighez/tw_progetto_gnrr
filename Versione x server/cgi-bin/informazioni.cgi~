 my $cgi = new CGI;                       
 my @s = sessione::creaSessione();  
 my $session = $s[0]; 

my %hash_keys;

 if(defined($session->param('username'))) {
	my $cont = research::query_notifiche_utente($username, $doc);
	$hash_keys{LOGGEDIN} = 'yes';
	$hash_keys{NOME_UTENTE} =  $session->param('username');
